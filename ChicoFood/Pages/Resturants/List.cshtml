@page
@model ChicoFood.Pages.Resturants.ListModel
@{
    ViewData["Title"] = "Restaurants";

}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<h1>Resturants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="Search" name="search" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var resturant in Model.Resturants)
{
    <partial name="_Summery" model="resturant" />
}

<div>
    <a asp-page=".\Edit" class="btn btn-primary">Add New</a>
</div>
