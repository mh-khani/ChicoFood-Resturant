@using ChicoFood.Core
@model Restaurant

<div class="card" style="margin-top:10px;margin-bottom:10px;">
    <div class="card card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail" asp-route-restaturantId="@Model.Id">
            <i class="fa-solid fa-eye"></i>
        </a>
            <a class="btn btn-lg"
           asp-page="./Edit" asp-route-restaturantId="@Model.Id">
                <i class="fa-solid fa-pen"></i>
            </a>
            <a class="btn btn-lg"
           asp-page="./Delete" asp-route-restaturantId="@Model.Id">
                <i class="fa-solid fa-trash"></i>
            </a>
    </div>
</div>